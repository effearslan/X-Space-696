<div class = 'container'>
  <%= image_tag "main-pic.jpg", alt: "Home", class: "main-page-pic" %>
      <div class='text-main-page-banner'>
        <h2 class='logo-text'> X-Space</h2>
        <p class='brand-tagline'>We always have e<strong>X</strong>tra Space for you</p>
        <p class='main-attract-customer-txt'>sign up and send your package</p>
        <%= link_to "<button class='main-button btn btn-primary'>Sign Up</button>".html_safe, new_user_registration_path %>
        <%# <button class='main-button btn btn-primary'>Sign up</button> %>
          <p class='text-for-existing-account'>Already have an account | <%= link_to "<strong>log in</strong>".html_safe, new_user_session_path  %></p>
        <%# <p class='text-for-existing-account'>Already have an account | <strong>sign in</strong></p> %>
          <div><p class='text-down-scroll'> Scroll down </p></div>
          <%= image_tag "arrow-down.png", alt: "arrow", class: 'arrow-down-scroll' %>
      </div>
            <div class="space-maintext-container">
              <h1 class='space-txt-main-page'> Available Spaces</h1>
            </div>
            <div class="card-wrapper">
  <% @spaces.sample(3).each do |space| %>
  <%# <a class="card" style="--bg-img: url(https://images.unsplash.com/photo-1610244767159-0f9797ff1926?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8bHVnZ2FnZXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60
  )"> %>
  <div class="card-space">
    <div class='card-info'>
      <img src="https://images.unsplash.com/photo-1448582649076-3981753123b5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Nnx8bHVnZ2FnZXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=800&q=60
          " alt="luggage image">
      <li class='title'><%= space.name %> </li>
      <li class='card-text'><span>From: </span><%= space.location %></li>
      <li class='card-text'><span>To: </span><%= space.destination %></li>
      <li class='card-text'><span>Date: </span><%= space.travel_date.strftime('%d-%m-%Y') %></li>
      <li class='card-text'><span><i class="fas fa-money-bill"></i> </span><%= space.price %> dollars</li>
    </div>
    <%= link_to 'Show', space_path(space), class: 'btn-wide' %>
  </div>
  <% end %>
</div>
</div>
