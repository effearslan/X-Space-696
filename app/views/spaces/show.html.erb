<div class='big-containerx'>
  <%# <%= image_tag "backround-main.jpg", alt: "Home", class: "background-img-all" %>
    <%# <div class="card mb-3" style="max-width: 900px;"> %>
      <div class="sm-container d-flex bd-highlight">
        <div class=" img-name-container">
          <h2 class='main-space-name-abs title-text-space'><%= @space.name %></h2>
          <div>

              <% if @space.photos.presence %>
                <% @space.photos.each do |photo| %>
                  <%=cl_image_tag photo.key, class:'bagimageholder'%>
                <% end %>
              <%else%>
                <img src="https://images.unsplash.com/photo-1448582649076-3981753123b5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Nnx8bHVnZ2FnZXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=800&q=60" class="card-image" alt="luggage image">
              <%end%>
          </div>
        </div>




        <div class="info-space-card">
          <div class="dimension-space-card d-flex">
            <h2 class='title-text-space'>Dimensions</h2>
            <h4 class='result-text-space'> width: <%= @space.width %> cm</h4>
            <h4 class='result-text-space'>height: <%= @space.height %> cm</h4>
            <h4 class='result-text-space'>depth: <%= @space.depth %> cm</h4>
          </div>

          <div class="pric-space-card d-flex">
            <h2 class='title-text-space'>Price of this space is: </h2>
            <h2 class='result-text-space'><%= @space.price %> $</h2>
          </div>

          <div class="travel-space-card">
            <h2 class='title-text-space'>Trip details </h2>
            <div class="from-travel-text d-flex">
              <h2 class='title-text-space'>ðŸ›« From:</h2>
              <h2 class='result-text-space'><%= @space.location %></h2>
            </div>
            <div class="to-travel-text d-flex">
              <h2 class='title-text-space'>ðŸ›¬ To:</h4>
              <h2 class='result-text-space'><%= @space.destination %></h2>
            </div>
            <div class="travel-date-text d-flex">
            <h2 class='title-text-space'>Travel Date: </h2>
            <h2 class='result-text-space'><%= @space.travel_date %></h2>
            </div>
          </div>

          <div class="status-space-card d-flex">
              <h2 class='title-text-space'>Status:</h2>
              <% if @space.booking %>
                <h2 class='result-text-space'><%= @space.booking.status %></h2>
              <% else %>
                <h2 class='title-text-space'></h2>
                <h2 class='result-text-space'><%= "Free to book" %></h2>
              <% end %>
          </div>

          <div class="button-for-create-space">
            <%# button for creating booking %>
            <%= simple_form_for([@space, @booking]) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
              <div class="btn"> <%= f.button :submit %> </div>
              <% end %>
            </div>
          </div>
        </div>
</div>
